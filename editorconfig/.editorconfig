; http://editorconfig.org/

; 最顶层的 .editorconfig，不再向上查找
root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf

[*.{html,css,js}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[Makefile,*.mak]
indent_style = tab

[*.bat]
end_of_line = crlf

[*.ps1]
; https://github.com/editorconfig/editorconfig-vscode/issues/35
charset = utf-8-bom

[.editorconfig]
end_of_line = disabled
